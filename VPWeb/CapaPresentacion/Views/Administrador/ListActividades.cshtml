@model IEnumerable<CapaEntidades.entActividad>

@{
    ViewBag.Title = "ListActividades";
    Layout = "~/Views/MasterPage.cshtml";
}

<h2>ListActividades</h2>

<p>
    @Html.ActionLink("Create New ACTIVIDAD", "RegistroActividad")
</p>
<table>
    <tr>
        <th>
           Nº
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tituloActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcionActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagenActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estadoActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccionActividad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lugarInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lugarFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horaFin)
        </th>
        <th></th>
    </tr>
@{ Int32 c=1;}
@foreach (var item in Model) {
    <tr>
        @Html.HiddenFor(modelItem => item.idActividad)
        <td>
            @c            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tituloActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcionActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imagenActividad)
            @Html.HiddenFor(modelItem => item.imagenActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccionActividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lugarInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lugarFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.horaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.horaFin)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditarActividad", new { idActividad = item.idActividad }) |
            <a class="waves-effect waves-light btn modal-trigger  teal " href="#myModalEliminar" data-toggle='modal' data-target='#myModalEliminar' data-id="@Html.DisplayFor(modelItem => item.idActividad)">Delete</a>

        </td>
    </tr>
    c = c + 1;
}

</table>

<div id="myModalEliminar" class="modal fade-in" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <form method="post" role="form" action="..............">
        <div class="modal-content teal white-text">
            <p> Lorem ipsum dolor sit amet</p>
            <input type="text" name="txtUserId" id="Id" value="" />
        </div>
        <div class="modal-footer  teal lighten-4">
            <a href="#" class="waves-effect waves-red btn-flat modal-action modal-close">Disagree</a>
            <a href="#" class="waves-effect waves-green btn-flat modal-action modal-close">Agree</a>
        </div>
    </form>
</div>

